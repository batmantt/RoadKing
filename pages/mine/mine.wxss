.body {
  width: 100%;
  height: 100%;
}

.top {
  width: 100%;
  height: 400rpx;
  background-color: #5a5fc0;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fefefe;
  font-style: PingFang-sc;
  font-weight: bold;
  font-size: 30rpx;
}

button {
  width: 200rpx;
  margin-top: 50rpx;
}

.userinfo-avatar {
  width: 214rpx;
  height: 214rpx;
  border-radius: 50%;
  margin-top: 40rpx;
  margin-bottom: 44rpx;
}

.fgx {
  width: 100%;
  height: 15rpx;
  background-color: #f2f2f2;
}

.my_sale {
  width: 120rpx;
  height: 70rpx;
  text-align: center;
  line-height: 85rpx;
  margin: 0 auto;
  border-bottom: 2px solid #fe0e0d;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.goods_list {
  width: 100%;
  height: auto;
}

.goods {
  width: 93%;
  height: 170rpx;
  border: 1rpx solid #f2f2f2;
  margin: 0 auto;
  margin-bottom: 26rpx;
  box-shadow: 10rpx 10rpx 30rpx 5rpx #fdf0ed;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.image {
  height: 500px;
  width: 100%;
}

.shopping_img {
  width: 130rpx;
  height: 130rpx;
  margin-left: 20rpx;
}

.text-NI {
  margin-top: -20rpx;
  margin-left: 50rpx;
}

.shopping-name {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  letter-spacing: 3rpx;
}

.current-price {
  font-size: 34rpx;
  color: #f00;
  letter-spacing: 3rpx;
}

.pay {
  margin-left: 250rpx;
  font-size: 30rpx;
  color: gray;
  font-weight: 600;
}

.order_info {
  width: 93%;
  height: 30rpx;
  display: flex;
  position: absolute;
  /* background-color: rosybrown; */
  margin-top: -70rpx;
  font-size: 25rpx;
  letter-spacing: 2rpx;
  justify-content: space-between;
  color: gray;
}

.text_info {
  width: 93%;
  font-size: 30rpx;
  color: gray;
  margin-left: 26rpx;
}
